#
# Neos CMS functions
# 
neos_kill_temp() {
    echo -n "Deleting Neos temporary folder..."
    if [ -f "./flow" ]; then
        rm -rf ./Data/Temporary
        echo "\033[0;32mdone\033[0m!"
    else
        echo "\033[0;31mfailed\033[0m!"
    fi
}

